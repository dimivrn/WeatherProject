<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="weatherDay" type="com.android.app.weatherproject.data.WeatherDay" />
        <variable
            name="utils" type="com.android.app.weatherproject.utils.UtilsMethods"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:listPreferredItemHeight"
        android:orientation="horizontal"
        android:padding="@dimen/start_padding_parent_linear">

        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{weatherDay.icon}"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/start_padding_nested_linear"
            android:paddingStart="@dimen/start_padding_nested_linear">

            <TextView
                android:id="@+id/list_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@{String.valueOf(weatherDay.time)}"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/list_summary_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{weatherDay.summary}"
                android:textSize="@dimen/text_size_detail" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(weatherDay.temperatureHigh)}"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_slash"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/item_low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(weatherDay.temperatureLow)}"
                android:textSize="@dimen/text_size_large" />

        </LinearLayout>

    </LinearLayout>

</layout>



